pipeline {
    agent { label 'JAVA_8' }
    options {
        retry(3)
        timeout(time: 30, unit: 'MINUTES') 
    }
    triggers {
        pollSCM('* * * * *')
    }
    tools {
        jdk 'JAVA_8'
    }
    stages {
        stage('source code') {
            steps {
                git url: 'https://github.com/yashdeeppavan/game-of-life.git',
                    branch: 'master'
            }
        }
        stage('package') {
            steps {
                sh script: 'mvn clean package'
            }

        }    
        stage('report') {
            steps {
                junit testResults: '**/target/surefire-reports/TEST-*.xml'
                archiveArtifacts artifacts: '**/target/gameoflife.war'
            }

            }
    }
    post {
        success {
            mail subject: 'your project is effective',
                 body: 'your project is effective',
                 to: 'pavankumargoriparthi6@gmail.com'    
        }
        failure {
             mail subject: 'your project is defective',
                 body: 'your project is defective',
                 to: 'pavankumargoriparthi6@gmail.com'
        }
    }
}
